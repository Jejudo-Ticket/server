<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.funding.domain.payment.dao.FundingInfoDAO">
    
    <!-- fund_id로 펀딩 정보 조회 -->
    <select id="selectFundingInfoById" parameterType="Long" resultType="org.funding.domain.payment.dto.FundingInfoDTO">
        SELECT 
            f.fund_id as fundId,
            f.product_id as productId,
            fp.fund_type as fundType
        FROM fund f
        JOIN financial_product fp ON f.product_id = fp.product_id
        WHERE f.fund_id = #{fundId}
    </select>
    
</mapper>