<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

    <mapper namespace="org.funding.user.dao.MemberDAO">

        <insert id="insertMember" parameterType="org.funding.user.vo.MemberVO" useGeneratedKeys="true" keyProperty="userId">
            INSERT INTO member (
                username, password, email, nickname, phone_number, role, create_at, update_at
            ) VALUES (
    #{username}, #{password}, #{email}, #{nickname}, #{phoneNumber}, #{role}, NOW(), NOW()
    )
        </insert>


        <select id="findByEmail" parameterType="String" resultType="org.funding.user.vo.MemberVO">
            SELECT *
            FROM member
            WHERE email = #{email}
        </select>

        <select id="findByUsername" parameterType="String" resultType="org.funding.user.vo.MemberVO">
            SELECT *
            FROM member
            WHERE username = #{username}
        </select>

        <select id="findByNickname" resultType="org.funding.user.vo.MemberVO">
            SELECT *
            FROM member
            WHERE nickname = #{nickname}
        </select>
        <!-- 마이페이지 관련 쿼리들 -->
        <select id="findById" parameterType="long" resultType="org.funding.user.vo.MemberVO">
            SELECT *
            FROM member
            WHERE user_id = #{userId}
        </select>

        <update id="updateMember" parameterType="org.funding.user.vo.MemberVO">
            UPDATE member
            SET username = #{username},
                nickname = #{nickname},
                phone_number = #{phoneNumber},
                update_at = NOW()
            WHERE user_id = #{userId}
        </update>

        <!-- 키워드 관련 쿼리들 -->
        <select id="findKeywordsByUserId" parameterType="Long" resultType="org.funding.interestingKeyword.vo.InterestingKeywordVO">
            SELECT
                interest_id,
                keyword,
                user_id
            FROM tbl_interesting_keyword
            WHERE user_id = #{userId}
        </select>


    <delete id="deleteKeywordsByUserId" parameterType="Long">
            DELETE FROM tbl_interesting_keyword
            WHERE user_id = #{userId}
        </delete>

        <insert id="insertKeyword">
            INSERT INTO tbl_interesting_keyword (keyword, user_id)
            VALUES (#{keyword}, #{userId})
        </insert>

    </mapper>




