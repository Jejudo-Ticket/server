<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.funding.interestingKeyword.dao.InterestingKeywordDAO">

    <select id="findByUserId" parameterType="long" resultType="org.funding.interestingKeyword.vo.InterestingKeywordVO">
        SELECT
            k.keyword_id    AS interestId,
            k.name          AS keyword,
            uk.user_id      AS userId
        FROM
            keywords k
                JOIN
            user_keywords uk ON k.keyword_id = uk.keyword_id
        WHERE
            uk.user_id = #{userId}
    </select>


</mapper>