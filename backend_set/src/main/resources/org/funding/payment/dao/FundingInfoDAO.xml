<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.funding.payment.dao.FundingInfoDAO">

    <resultMap id="fundingInfoMap" type="org.funding.payment.dto.FundingInfoDTO">
        <result property="fundId" column="fund_id"/>
        <result property="fundType" column="fund_type"/>
        <result property="productId" column="product_id"/>
    </resultMap>

    <select id="selectFundingInfoById" parameterType="Long" resultMap="fundingInfoMap">
        SELECT 
            f.fund_id,
            fp.fund_type,
            f.product_id
        FROM fund f
        INNER JOIN financial_product fp ON f.product_id = fp.product_id
        WHERE f.fund_id = #{fundId}
    </select>

</mapper>