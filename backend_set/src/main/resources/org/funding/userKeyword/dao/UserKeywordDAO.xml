<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.funding.mapping.userKeyword.dao.UserKeywordDAO">

    <select id="selectUserKeyword" parameterType="org.funding.mapping.userKeyword.dto.UserKeywordRequestDTO" resultType="org.funding.mapping.userKeyword.vo.UserKeywordVO">
        select *
        from user_keywords
        where user_id = #{userId} and keyword_id = #{keywordId}
    </select>

    <select id="selectKeywordIdsByUserId" parameterType="Long" resultType="Long">
        select keyword_id
        from user_keywords
        where user_id = #{userId}
    </select>

    <insert id="insertUserKeyword" parameterType="org.funding.mapping.userKeyword.dto.UserKeywordRequestDTO">
        insert into user_keywords (user_id, keyword_id)
        values (#{userId}, #{keywordId})
    </insert>

    <delete id="deleteUserKeyword" parameterType="org.funding.mapping.userKeyword.dto.UserKeywordRequestDTO">
        delete from user_keywords
        where user_id = #{userId} and keyword_id = #{keywordId}
    </delete>

    <delete id="deleteKeywordsByUserId" parameterType="Long">
        delete from user_keywords
        where user_id = #{userId}
    </delete>

</mapper>
